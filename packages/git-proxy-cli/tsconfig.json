{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "moduleResolution": "nodenext",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["index.ts", "types.ts"],
  "exclude": [
    "src/config/**/*",
    "src/db/**/*",
    "src/proxy/**/*",
    "src/service/**/*",
    "src/ui/**/*",
    "eslint.config.mjs"
  ]
}
