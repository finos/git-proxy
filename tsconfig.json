{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["."],
  "exclude": ["experimental/**", "plugins/**"]
}
